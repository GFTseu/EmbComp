<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/SearchBluetoothBtn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Searching Bluetooth"
        tools:ignore="MissingConstraints"
        android:backgroundTint="#00BCD4"
        android:layout_alignParentTop="true"  />

    <Button
        android:id="@+id/button1"
        android:layout_width="205dp"
        android:layout_height="0dp"
        android:text="SPP连接"
        android:layout_below="@id/SearchBluetoothBtn"
        android:backgroundTint="#4CAF50"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button2"
        android:layout_width="205dp"
        android:layout_height="0dp"
        android:text="断开SPP连接"
        android:layout_below="@id/SearchBluetoothBtn"
        android:layout_toRightOf="@id/button1"
        android:backgroundTint="#00BCD4"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/TextView0"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="SPP连接状态"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/button1"
        android:background="#17111111"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/WaveTypeTextView"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_below="@id/TextView0"
        android:layout_marginLeft="5dp"
        android:gravity="center_vertical|left"
        android:text="Wave Type"
        android:textSize="15dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/WaveFreqTextView"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:text="Frequency"
        android:textSize="15dp"
        android:layout_below="@id/TextView0"
        android:layout_toRightOf="@+id/WaveTypeTextView"
        android:gravity="center_vertical|left"
        android:layout_centerHorizontal="true"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/WaveDutyRatioTextView"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:text="Duty Ratio (%)"
        android:textSize="15dp"
        android:layout_below="@id/SearchBluetoothBtn"
        android:layout_toRightOf="@+id/WaveFreqTextView"
        android:gravity="center_vertical|left"
        android:layout_centerHorizontal="true"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/WaveType"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:selectAllOnFocus="true"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
        android:layout_below="@id/WaveTypeTextView"
        android:textSize="15dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/WaveFreq"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@id/WaveType"
        android:layout_below="@+id/WaveTypeTextView"
        android:digits="0123456789.mMkKhHzZ"
        android:textSize="15dp"
        android:selectAllOnFocus="true"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/WaveDutyRatio"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@id/WaveFreq"
        android:layout_below="@+id/WaveTypeTextView"
        android:digits="0123456789.%"
        android:textSize="15dp"
        android:selectAllOnFocus="true"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/SendSignalDataBtn"
        android:layout_width="100dp"
        android:layout_marginLeft="5dp"
        android:layout_height="150dp"
        android:layout_below="@id/TextView0"
        android:layout_toRightOf="@id/WaveDutyRatioTextView"
        android:backgroundTint="#AFDFE5"
        android:text="Send Signal Data"
        android:textColor="@color/black"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/WaveHighVoltageTextView"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_below="@id/WaveType"
        android:layout_marginLeft="5dp"
        android:gravity="center_vertical|left"
        android:text="High Voltage"
        android:textSize="15dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/WaveLowVoltageTextView"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_below="@id/WaveType"
        android:layout_toRightOf="@+id/WaveHighVoltageTextView"
        android:gravity="center_vertical|left"
        android:text="Low Voltage"
        android:textSize="15dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/WaveHighVoltage"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/WaveHighVoltageTextView"
        android:digits="-0123456789.mMvV"
        android:textSize="15dp"
        android:selectAllOnFocus="true"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/WaveLowVoltage"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@id/WaveHighVoltage"
        android:layout_below="@+id/WaveLowVoltageTextView"
        android:digits="-0123456789.mMvV"
        android:textSize="15dp"
        android:selectAllOnFocus="true"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/WaveVoltageExpressionBtn"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/WaveDutyRatio"
        android:layout_toRightOf="@id/WaveLowVoltageTextView"
        android:backgroundTint="#AFDFE5"
        android:textSize="7dp"
        android:text="Voltage Expression"
        android:textStyle="bold"
        android:textColor="@color/black"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/RecvDataInfo"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Input Signal Information"
        android:layout_below="@id/WaveHighVoltage"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/yaxis"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:text="    Vin/mV"
        android:textSize="7dp"
        android:textStyle="bold"
        android:layout_below="@id/RecvDataInfo"
        tools:ignore="MissingConstraints" />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chart"
        android:layout_width="match_parent"
        android:layout_below="@id/RecvDataInfo"
        android:layout_height="240dp" />

    <Button android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="清除数据"
        android:layout_below="@id/chart"
        android:backgroundTint="#4CAF50"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/TextView3"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Available Bluetooth"
        android:layout_below="@id/button4"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:background="#AFDFE5"
        tools:ignore="MissingConstraints" />

    <ListView
        android:id="@+id/BluetoothListView"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_below="@id/TextView3"
        android:background="#72D8EB"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/cursorSwitch"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:text="Cursor"
        android:textSize="11dp"
        android:layout_below="@+id/BluetoothListView"
        android:layout_marginLeft="8dp"
        android:backgroundTint="#00BCD4"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/X1U"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:text="X1 UP"
        android:textSize="11dp"
        android:layout_below="@+id/BluetoothListView"
        android:layout_toRightOf="@+id/cursorSwitch"
        android:layout_marginLeft="5dp"
        android:backgroundTint="#AFDFE5"
        android:textColor="@color/black"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/X1D"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:text="X1 Down"
        android:textSize="10dp"
        android:layout_below="@+id/X1U"
        android:layout_toRightOf="@+id/cursorSwitch"
        android:layout_marginLeft="5dp"
        android:backgroundTint="#AFDFE5"
        android:textColor="@color/black"
        tools:ignore="MissingConstraints" />

